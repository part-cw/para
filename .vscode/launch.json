{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current Jest test file",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "--config",
        "jest.utils.config.js",
        "--runInBand",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}

